{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
  "exclude": [
    "node_modules",
    "dist",
    "src/attendance/**",
    "src/notifications/**",
    "src/tracking/**",
    "src/students/**",
    "src/users/**",
    "src/devices/**",
    "src/prisma/seed.ts"
  ]
}
